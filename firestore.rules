rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /exams/{doc} {
      allow read: if true;
    }
    
    match /subjects/{doc} {
      allow read: if true;
    }
    
    match /topics/{doc} {
      allow read: if true;
    }
    
    match /mockTests/{doc} {
      allow read: if true;
    }
    
    match /studySessions/{doc} {
      allow read, write: if request.auth != null;
    }
  }
}